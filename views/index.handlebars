<h1>Burgers!</h1>

<h2>Eat it!</h2>

<ul>
    {{#each burger}}
    {{#unless devour}}
    {{> burger/burger-block devour=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burp!</h2>

<ul>
    {{#each burger}}
    {{#if devour}}
    {{> burger/burger-block devour=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Eat another burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devour">Hungry?</label><br>
        <input type="radio" name="devour" value="1" checked> Hungry!<br>
        <input type="radio" name="devour" value="0"> Burp!
    </div>

    <button type="submit">Eat burger</button>
</form>