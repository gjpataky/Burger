<h1>Burgers!</h1>

<h2>Eat it!</h2>

<ul>
    {{#each burger}}
    {{#unless devour}}
    {{> burger/burger-block devour=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burp!</h2>

<ul>
    {{#each burger}}
    {{#if devour}}
    {{> burger/burger-block devour=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Order another burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>



    <button type="submit">Order burger</button>
</form>